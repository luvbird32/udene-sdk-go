
{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-native",
    "lib": ["es2018"],
    "moduleResolution": "node"
  },
  "include": ["*.ts", "*.tsx"],
  "exclude": ["node_modules", "dist", "**/__tests__/*"]
}
