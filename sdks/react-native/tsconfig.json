
{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-native",
    "lib": ["es6", "es2017"]
  },
  "include": ["index.ts", "src/**/*"],
  "exclude": ["node_modules", "dist", "**/__tests__/*"]
}
