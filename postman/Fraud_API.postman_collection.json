{
  "info": {
    "name": "Udene API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Metrics",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{api_key}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/metrics",
          "host": ["{{base_url}}"],
          "path": ["metrics"]
        }
      }
    },
    {
      "name": "Get Activity",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{api_key}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/activity",
          "host": ["{{base_url}}"],
          "path": ["activity"]
        }
      }
    },
    {
      "name": "Track Interaction",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{api_key}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"user_123\",\n  \"action\": \"login\",\n  \"timestamp\": \"2024-02-20T15:30:00Z\",\n  \"metadata\": {\n    \"ipAddress\": \"192.168.1.1\",\n    \"userAgent\": \"Mozilla/5.0...\"\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/track",
          "host": ["{{base_url}}"],
          "path": ["track"]
        }
      }
    }
  ]
}